# flow control
reader = open('fruits.txt', 'r')
line = reader.readline()
while line != '':
    if line[0] in set(['A', 'E', 'I', 'O', 'U']):
        print 'I am an', line
    else:
        print 'I am a', line
    line = reader.readline()

